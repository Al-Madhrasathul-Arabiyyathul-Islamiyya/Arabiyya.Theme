<ResourceDictionary
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:avaglass="clr-namespace:AvaGlass.Controls;assembly=AvaGlass"
  xmlns:converters="clr-namespace:Arabiyya.Theme.Navigation.Converters;assembly=Arabiyya.Theme">

  <!--  Converters  -->
  <converters:AnyTrueConverter x:Key="AnyTrueConverter" />
  <converters:BoolToThemeClassConverter x:Key="BoolToThemeClassConverter" />
  <converters:ExpandIconConverter x:Key="ExpandIconConverter" />

  <!--  SideNav styles  -->
  <Style x:Key="GlassPanel" Selector="avaglass|GlassmorphicPanel.GlassPanel">
    <Setter Property="TintColor" Value="White" />
    <Setter Property="TintOpacity" Value="0.2" />
    <Setter Property="BlurRadius" Value="20" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <Style x:Key="AcrylicPanel" Selector="avaglass|GlassmorphicPanel.AcrylicPanel">
    <Setter Property="TintColor" Value="Black" />
    <Setter Property="TintOpacity" Value="0.4" />
    <Setter Property="BlurRadius" Value="20" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>
</ResourceDictionary>