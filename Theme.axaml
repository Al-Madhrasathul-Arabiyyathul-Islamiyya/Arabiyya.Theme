<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Include Avalonia's built-in theme  -->
    <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentTheme.xaml" />

    <!--  Include AvaGlass library  -->
    <StyleInclude Source="avares://AvaGlass/Themes/Default.axaml" />

    <!--  Include our resource dictionaries  -->
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Shared resources that don't change with theme  -->
                <ResourceInclude Source="/Styles/Core/SharedResources.axaml" />

                <!--  Theme-specific resources - will be selected by ThemeVariant  -->
                <ResourceInclude Source="/Styles/Core/LightThemeResources.axaml" />
                <ResourceInclude Source="/Styles/Core/DarkThemeResources.axaml" />

                <ResourceInclude Source="/Converters/Converters.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!--  Base styles for controls  -->
    <StyleInclude Source="/Styles/Core/BaseStyles.axaml" />

    <!--  Control-specific styles  -->
    <StyleInclude Source="/Styles/Components/Buttons/ButtonStyles.axaml" />
    <StyleInclude Source="/Styles/Components/Containers/ContainerStyles.axaml" />
    <StyleInclude Source="/Styles/Components/Inputs/InputsStyles.axaml" />
    <StyleInclude Source="/Styles/Components/Patterns/PatternsStyles.axaml" />
    <StyleInclude Source="/Styles/Components/Typography/TextBlockStyles.axaml" />
</Styles>