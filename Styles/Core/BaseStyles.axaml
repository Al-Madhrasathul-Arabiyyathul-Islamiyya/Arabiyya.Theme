<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--  Base Application Styles  -->
  <Style Selector="Window">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Background" Value="{DynamicResource Color.Background}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
  </Style>

  <Style Selector="UserControl">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
  </Style>

  <!--  Base TextBox Styles  -->
  <Style Selector="TextBox">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Padding" Value="10,8" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="{DynamicResource Color.Outline}" />
    <Setter Property="Background" Value="{DynamicResource Color.Surface}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}" />
  </Style>

  <!--  Base Button Styles  -->
  <Style Selector="Button">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Padding" Value="16,8" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>

  <!--  Base ComboBox Styles  -->
  <Style Selector="ComboBox">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Padding" Value="10,8" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Background" Value="{DynamicResource Color.Surface}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}" />
  </Style>

  <!--  Base CheckBox Styles  -->
  <Style Selector="CheckBox">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}" />
  </Style>

  <!--  Base RadioButton Styles  -->
  <Style Selector="RadioButton">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Primary}" />
  </Style>
</Styles>
