<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--  This contains resources that don't change with the theme  -->
  <x:Boolean x:Key="IsDarkTheme">false</x:Boolean>

  <!--  Font Families  -->
  <FontFamily x:Key="MontserratFontFamily">/Assets/Fonts/Montserrat</FontFamily>
  <FontFamily x:Key="PhosphorFontFamily">/Assets/Fonts#Phosphor-Bold</FontFamily>

  <!--  Text Sizes  -->
  <x:Double x:Key="FontSizeH1">32</x:Double>
  <x:Double x:Key="FontSizeH2">28</x:Double>
  <x:Double x:Key="FontSizeH3">24</x:Double>
  <x:Double x:Key="FontSizeH4">20</x:Double>
  <x:Double x:Key="FontSizeH5">18</x:Double>
  <x:Double x:Key="FontSizeH6">16</x:Double>
  <x:Double x:Key="FontSizeBody">14</x:Double>
  <x:Double x:Key="FontSizeSmall">12</x:Double>
  <x:Double x:Key="FontSizeCaption">10</x:Double>

  <!--  Font Weights  -->
  <FontWeight x:Key="FontWeightThin">Thin</FontWeight>
  <FontWeight x:Key="FontWeightLight">Light</FontWeight>
  <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
  <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
  <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
  <FontWeight x:Key="FontWeightDemiBold">DemiBold</FontWeight>
  <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
  <FontWeight x:Key="FontWeightExtraBold">ExtraBold</FontWeight>
  <FontWeight x:Key="FontWeightBlack">Black</FontWeight>

  <!--  Line Heights  -->
  <x:Double x:Key="LineHeightH1">40</x:Double>
  <x:Double x:Key="LineHeightH2">35</x:Double>
  <x:Double x:Key="LineHeightH3">30</x:Double>
  <x:Double x:Key="LineHeightH4">25</x:Double>
  <x:Double x:Key="LineHeightH5">23</x:Double>
  <x:Double x:Key="LineHeightH6">20</x:Double>
  <x:Double x:Key="LineHeightDefault">18</x:Double>
  <x:Double x:Key="LineHeightSmall">16</x:Double>
  <x:Double x:Key="LineHeightCaption">14</x:Double>
  <x:Double x:Key="LineHeightComfortable">22</x:Double>
  <x:Double x:Key="LineHeightLoose">26</x:Double>
  <x:Double x:Key="LineHeightTight">16</x:Double>

  <!--  Letter Spacing  -->
  <x:Double x:Key="LetterSpacingNormal">0</x:Double>
  <x:Double x:Key="LetterSpacingWide">0.5</x:Double>
  <x:Double x:Key="LetterSpacingTight">-0.5</x:Double>
</ResourceDictionary>