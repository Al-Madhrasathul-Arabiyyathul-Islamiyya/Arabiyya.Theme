<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--  CheckBox Styles  -->
  <Style Selector="CheckBox">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
    <Setter Property="Margin" Value="0,2" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.2" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="CheckBox /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="BorderThickness" Value="1.5" />
    <Setter Property="CornerRadius" Value="2" />
  </Style>

  <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="CheckBox:indeterminate /template/ Border#NormalRectangle">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Light}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="CheckBox:disabled /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="CheckBox:disabled /template/ ContentPresenter#ContentPresenter">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  CheckBox Secondary Style  -->
  <Style Selector="CheckBox.Secondary /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <Style Selector="CheckBox.Secondary:checked /template/ Border#NormalRectangle">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <!--  RadioButton Styles  -->
  <Style Selector="RadioButton">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
    <Setter Property="Margin" Value="0,2" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.2" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="RadioButton /template/ Ellipse#OuterEllipse">
    <Setter Property="Stroke" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="StrokeThickness" Value="1.5" />
  </Style>

  <Style Selector="RadioButton:pointerover /template/ Ellipse#OuterEllipse">
    <Setter Property="Stroke" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="RadioButton:checked /template/ Ellipse#OuterEllipse">
    <Setter Property="Stroke" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="RadioButton:checked /template/ Ellipse#InnerEllipse">
    <Setter Property="Fill" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="RadioButton:disabled /template/ Ellipse#OuterEllipse">
    <Setter Property="Stroke" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="RadioButton:disabled /template/ ContentPresenter#ContentPresenter">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  RadioButton Secondary Style  -->
  <Style Selector="RadioButton.Secondary:checked /template/ Ellipse#OuterEllipse">
    <Setter Property="Stroke" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <Style Selector="RadioButton.Secondary:checked /template/ Ellipse#InnerEllipse">
    <Setter Property="Fill" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <!--  ToggleSwitch Styles  -->
  <Style Selector="ToggleSwitch">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.2" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="10" />
  </Style>

  <Style Selector="ToggleSwitch:pointerover /template/ Border#SwitchKnobBounds">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Text.Muted}" />
  </Style>

  <Style Selector="ToggleSwitch /template/ Ellipse#SwitchKnob">
    <Setter Property="Fill" Value="{DynamicResource Brush.Text.Muted}" />
  </Style>

  <Style Selector="ToggleSwitch:checked /template/ Border#SwitchKnobBounds">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="ToggleSwitch:checked /template/ Ellipse#SwitchKnob">
    <Setter Property="Fill" Value="White" />
  </Style>

  <Style Selector="ToggleSwitch:disabled /template/ Border#SwitchKnobBounds">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="ToggleSwitch:disabled /template/ ContentPresenter#ContentPresenter">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ToggleSwitch Secondary Style  -->
  <Style Selector="ToggleSwitch.Secondary:checked /template/ Border#SwitchKnobBounds">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <!--  Slider Styles  -->
  <Style Selector="Slider">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Background" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="Margin" Value="0,8" />
    <Setter Property="MinHeight" Value="24" />
  </Style>

  <Style Selector="Slider /template/ RepeatButton#PART_DecreaseButton">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="CornerRadius" Value="2,0,0,2" />
  </Style>

  <Style Selector="Slider:vertical /template/ RepeatButton#PART_DecreaseButton">
    <Setter Property="CornerRadius" Value="0,0,2,2" />
  </Style>

  <Style Selector="Slider /template/ RepeatButton#PART_IncreaseButton">
    <Setter Property="Background" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="CornerRadius" Value="0,2,2,0" />
  </Style>

  <Style Selector="Slider:vertical /template/ RepeatButton#PART_IncreaseButton">
    <Setter Property="CornerRadius" Value="2,2,0,0" />
  </Style>

  <Style Selector="Slider /template/ Thumb#thumb">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border
          Width="12"
          Height="12"
          Background="{TemplateBinding Background}"
          BorderBrush="{TemplateBinding BorderBrush}"
          BorderThickness="{TemplateBinding BorderThickness}"
          CornerRadius="6"
          RenderTransform="scale(1)">
          <Border.Transitions>
            <Transitions>
              <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
            </Transitions>
          </Border.Transitions>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="Slider /template/ Thumb#thumb:pointerover">
    <Setter Property="RenderTransform" Value="scale(1.2)" />
  </Style>

  <Style Selector="Slider:disabled /template/ RepeatButton#PART_DecreaseButton">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="Slider:disabled /template/ RepeatButton#PART_IncreaseButton">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="Slider:disabled /template/ Thumb#thumb">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  Slider Secondary Style  -->
  <Style Selector="Slider.Secondary">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <Style Selector="Slider.Secondary /template/ RepeatButton#PART_DecreaseButton">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <Style Selector="Slider.Secondary /template/ Thumb#thumb">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <!--  ProgressBar Styles  -->
  <Style Selector="ProgressBar">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Background" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="CornerRadius" Value="2" />
    <Setter Property="MinHeight" Value="4" />
    <Setter Property="Height" Value="4" />
  </Style>

  <Style Selector="ProgressBar:indeterminate /template/ Border#IndeterminateRect1">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Light}" />
  </Style>

  <Style Selector="ProgressBar:indeterminate /template/ Border#IndeterminateRect2">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="ProgressBar:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ProgressBar Secondary Style  -->
  <Style Selector="ProgressBar.Secondary">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <Style Selector="ProgressBar.Secondary:indeterminate /template/ Border#IndeterminateRect1">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary.Light}" />
  </Style>

  <Style Selector="ProgressBar.Secondary:indeterminate /template/ Border#IndeterminateRect2">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
  </Style>

  <!--  ProgressBar Status Styles  -->
  <Style Selector="ProgressBar.Success">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Success}" />
  </Style>

  <Style Selector="ProgressBar.Error">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Error}" />
  </Style>

  <Style Selector="ProgressBar.Warning">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Warning}" />
  </Style>

  <Style Selector="ProgressBar.Info">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Info}" />
  </Style>

  <!--  DatePicker Styles  -->
  <Style Selector="DatePicker">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="DatePicker:pointerover /template/ Border">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="DatePicker:focus /template/ Border">
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="DatePicker /template/ Button#PART_Button">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Muted}" />
  </Style>

  <Style Selector="DatePicker:pointerover /template/ Button#PART_Button">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="DatePicker:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  TimePicker Styles  -->
  <Style Selector="TimePicker">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="TimePicker:pointerover /template/ Border">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="TimePicker:focus /template/ Border">
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="TimePicker /template/ Button#PART_Button">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Muted}" />
  </Style>

  <Style Selector="TimePicker:pointerover /template/ Button#PART_Button">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="TimePicker:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  Calendar Styles  -->
  <Style Selector="Calendar">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="Background" Value="{DynamicResource Brush.Surface}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>

  <Style Selector="Calendar /template/ Button.CalendarButton">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
    <Setter Property="Padding" Value="4" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>

  <Style Selector="Calendar /template/ Button.CalendarButton:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Light}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
  </Style>

  <Style Selector="Calendar /template/ Button.CalendarButton:pressed">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
  </Style>

  <Style Selector="Calendar /template/ Button.CalendarButton:disabled">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="Calendar /template/ Button.CalendarButton.SelectedDate">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
  </Style>

  <!--  Expander Styles  -->
  <Style Selector="Expander">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="Background" Value="{DynamicResource Brush.Surface}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>

  <Style Selector="Expander /template/ ToggleButton#ExpanderHeader">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="Padding" Value="16,12" />
  </Style>

  <Style Selector="Expander /template/ ToggleButton#ExpanderHeader:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface.Elevated1}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="Expander:expanded /template/ ToggleButton#ExpanderHeader">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="Expander /template/ ContentPresenter#ExpanderContent">
    <Setter Property="Padding" Value="16" />
  </Style>

  <!--  ToolTip Styles  -->
  <Style Selector="ToolTip">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
    <Setter Property="Background" Value="{DynamicResource Brush.Surface.Elevated2}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="MaxWidth" Value="300" />
  </Style>

  <!--  ListBox Styles  -->
  <Style Selector="ListBox">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Padding" Value="4" />
  </Style>

  <Style Selector="ListBoxItem">
    <Setter Property="Padding" Value="8" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Margin" Value="0,2" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.2" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="ListBoxItem:not(:pointerover) /template/ ContentPresenter">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Opacity" Value="1.0" />
  </Style>

  <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Light}" />
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="ListBoxItem:selected">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
  </Style>
</Styles>
