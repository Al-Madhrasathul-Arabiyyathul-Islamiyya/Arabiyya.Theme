<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:Arabiyya.Theme.Navigation.Controls">

  <Style Selector="controls|NavigationListBox ListBoxItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="controls|NavigationListBox ListBoxItem:selected TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
  </Style>

  <Style Selector="controls|NavigationListBox ListBoxItem:disabled TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Disabled}" />
  </Style>

  <!--  Styles for expanded state  -->
  <Style Selector="controls|NavigationListBox[ShowLabels=True]">
    <Setter Property="Padding" Value="8,0" />
  </Style>

  <!--  Styles for collapsed state  -->
  <Style Selector="controls|NavigationListBox[ShowLabels=False]">
    <Setter Property="Padding" Value="0" />
  </Style>

  <Style Selector="controls|NavigationListBox[ShowLabels=False] TextBlock">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="HorizontalAlignment" Value="Center" />
  </Style>
</Styles>
