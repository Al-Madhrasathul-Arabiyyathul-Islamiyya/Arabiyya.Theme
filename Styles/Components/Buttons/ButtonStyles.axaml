<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--  Common Button Base Style (shared properties)  -->
  <Style Selector="Button.BaseButton">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Padding" Value="16 8" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
          <BrushTransition Property="Background" Duration="0:0:0.15" />
          <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <!--  ============== Primary Button ==============  -->
  <Style Selector="Button.Primary">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.Primary:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary.Dark}" />
  </Style>

  <Style Selector="Button.Primary:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Dark}" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.Primary:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ============== Secondary Button ==============  -->
  <Style Selector="Button.Secondary">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnSecondary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.Secondary:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary.Dark}" />
  </Style>

  <Style Selector="Button.Secondary:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary.Dark}" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.Secondary:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ============== Success Button ==============  -->
  <Style Selector="Button.Success">
    <Setter Property="Background" Value="{DynamicResource Brush.Success}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Success}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.Success:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Success.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Success.Dark}" />
  </Style>

  <Style Selector="Button.Success:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Success.Dark}" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.Success:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Success}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ============== Warning Button ==============  -->
  <Style Selector="Button.Warning">
    <Setter Property="Background" Value="{DynamicResource Brush.Warning}" />
    <Setter Property="Foreground" Value="{DynamicResource Color.Text.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Warning}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.Warning:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Warning.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Warning.Dark}" />
  </Style>

  <Style Selector="Button.Warning:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Warning.Dark}" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.Warning:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Warning}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ============== Alert (Error) Button ==============  -->
  <Style Selector="Button.Alert">
    <Setter Property="Background" Value="{DynamicResource Brush.Error}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Error}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.Alert:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Error.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Error.Dark}" />
  </Style>

  <Style Selector="Button.Alert:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Error.Dark}" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.Alert:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Error}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ============== Outline Button ==============  -->
  <Style Selector="Button.Outline">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.Outline:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#15000000" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary.Dark}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary.Dark}" />
  </Style>

  <Style Selector="Button.Outline:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="#25000000" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.Outline:disabled /template/ ContentPresenter">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  Outline variants  -->
  <Style Selector="Button.OutlineSecondary">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="RenderTransform" Value="none" />
  </Style>

  <Style Selector="Button.OutlineSecondary:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#15000000" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary.Dark}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Secondary.Dark}" />
  </Style>

  <Style Selector="Button.OutlineSecondary:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="#25000000" />
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.OutlineSecondary:disabled /template/ ContentPresenter">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  ============== Icon Button ==============  -->
  <Style Selector="Button.Icon">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
    <Setter Property="FontFamily" Value="{DynamicResource PhosphorFontFamily}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Divider}" />
    <Setter Property="Width" Value="40" />
    <Setter Property="Height" Value="40" />
    <Setter Property="CornerRadius" Value="20" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="RenderTransform" Value="none" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
          <BrushTransition Property="Background" Duration="0:0:0.15" />
          <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="Button.Icon:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface.Elevated1}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
  </Style>

  <Style Selector="Button.Icon:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface.Elevated2}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Outline}" />
    <Setter Property="RenderTransform" Value="scale(0.95)" />
  </Style>

  <Style Selector="Button.Icon:disabled /template/ ContentPresenter">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Disabled}" />
    <Setter Property="Opacity" Value="0.8" />
  </Style>

  <!--  ============== Icon-Text Button ==============  -->
  <!--  Custom Control Template for Icon + Text buttons  -->
  <Style Selector="Button.IconText">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnPrimary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="12 8" />
    <Setter Property="RenderTransform" Value="none" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border
          Name="PART_ButtonBackground"
          Background="{TemplateBinding Background}"
          BorderBrush="{TemplateBinding BorderBrush}"
          BorderThickness="{TemplateBinding BorderThickness}"
          CornerRadius="{TemplateBinding CornerRadius}">
          <StackPanel
            Margin="{TemplateBinding Padding}"
            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock
              Name="PART_IconPresenter"
              Margin="0,1,0,0"
              VerticalAlignment="Center"
              FontFamily="{StaticResource PhosphorFontFamily}"
              Foreground="{TemplateBinding Foreground}"
              Text="{TemplateBinding Tag}" />
            <TextBlock
              Name="PART_TextPresenter"
              Margin="0,0,0,1"
              VerticalAlignment="Center"
              Background="Transparent"
              FontFamily="{TemplateBinding FontFamily}"
              FontSize="{TemplateBinding FontSize}"
              FontWeight="{TemplateBinding FontWeight}"
              Foreground="{TemplateBinding Foreground}"
              Text="{TemplateBinding Content}" />
          </StackPanel>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="Button.IconText:pointerover /template/ Border#PART_ButtonBackground">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Dark}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary.Dark}" />
  </Style>

  <Style Selector="Button.IconText:pressed">
    <Setter Property="RenderTransform" Value="scale(0.98)" />
  </Style>

  <Style Selector="Button.IconText:pressed /template/ Border#PART_ButtonBackground">
    <Setter Property="Background" Value="{DynamicResource Brush.Primary.Dark}" />
  </Style>

  <Style Selector="Button.IconText:disabled /template/ Border#PART_ButtonBackground">
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <!--  IconText Secondary variant  -->
  <Style Selector="Button.IconTextSecondary">
    <Setter Property="Background" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.OnSecondary}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Secondary}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="12 8" />
    <Setter Property="RenderTransform" Value="none" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border
          Name="PART_ButtonBackground"
          Background="{TemplateBinding Background}"
          BorderBrush="{TemplateBinding BorderBrush}"
          BorderThickness="{TemplateBinding BorderThickness}"
          CornerRadius="{TemplateBinding CornerRadius}">
          <StackPanel
            Margin="{TemplateBinding Padding}"
            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock
