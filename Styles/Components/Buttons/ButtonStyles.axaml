  <Style Selector="Button.IconTextGlass:pointerover /template/ Border#PART_ButtonBackground">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.GlassButton.Border.Hover}" />
  </Style>

  <Style Selector="Button.IconTextGlass:pressed">
    <Setter Property="RenderTransform" Value="scale(0.97)" />
  </Style>

  <Style Selector="Button.IconTextGlass:pressed /template/ Border#PART_ButtonBackground">
    <Setter Property="Background" Value="{DynamicResource Brush.GlassButton.Background.Pressed}" />
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.GlassButton.Border.Pressed}" />
  </Style>

  <Style Selector="Button.IconTextGlass:disabled /template/ Border#PART_ButtonBackground">
